{
    "editor.fontFamily": "'FiraCode Nerd Font Mono'",
    "editor.fontSize": 13,
    "editor.lineNumbers": "relative",
    "editor.minimap.enabled": false,
    "editor.occurrencesHighlight": false,
    "editor.suggestSelection": "first",

    "files.trimTrailingWhitespace": true,

    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,

    "workbench.colorTheme": "One Dark Pro",
    "workbench.enableExperiments": false,
    "workbench.startupEditor": "newUntitledFile",

    "window.enableMenuBarMnemonics": false,
    "window.menuBarVisibility": "toggle",

    "emmet.includeLanguages": {
        "javascript": "javascriptreact"
    },

    "gitlens.showWelcomeOnInstall": false,

    "go.useLanguageServer": true,

    "python.languageServer": "Pylance",

    "vscode-neovim.neovimExecutablePaths.linux": "nvim",
    "vscode-neovim.neovimExecutablePaths.darwin": "nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "$HOME/.config/Code - OSS/User/init.vim",
    "vscode-neovim.neovimInitVimPaths.linux": "$HOME/.config/Code - OSS/User/init.vim"
}
